  "description": "Aegis is a simple photo watermarking application that allows you to add custom watermarks to your images.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "npx @electron/packager . WatermarkApp --platform=darwin --arch=x64 --out=dist --overwrite --prune=true --ignore=\"node_modules/@electron/packager\" --ignore=\".git\" --ignore=\".gitignore\" --ignore=\"README.md\" --ignore=\".DS_Store\" --ignore=\"npm-debug.log\" --ignore=\".vscode\" --ignore=\"*.log\"",
    "package-optimized": "npx @electron/packager . WatermarkApp --platform=darwin --arch=x64 --out=dist --overwrite --prune=true --ignore=\"node_modules/@electron/packager\" --ignore=\"\\.git\" --ignore=\"\\.gitignore\" --ignore=\"README\\.md\" --ignore=\"\\.DS_Store\" --ignore=\"npm-debug\\.log\" --ignore=\"\\.vscode\" --ignore=\".*\\.log$\" --ignore=\"dist\" --ignore=\"\\.github\" --ignore=\"test\" --ignore=\"tests\" --ignore=\"spec\" --ignore=\"coverage\""
  },
  "devDependencies": {
    "@electron/packager": "^18.4.2",
    "electron": "^37.3.1"
  },
  "dependencies": {
    "sharp": "^0.34.3",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
